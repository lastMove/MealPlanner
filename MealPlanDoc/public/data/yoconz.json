		{
         "name":"OAuth",
         "methods":[
            {
               "MethodName":"Authorize",
               "Synopsis":"",
               "HTTPMethod":"GET",
               "URI":"/oauth/authorize",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"client_id",
                     "Required":"Y",
                     "Default":"",
                     "Type":"int",
                     "Description":"The client identifier"
                  },				  			   
                  {
                     "Name":"redirect_uri",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"redirection URI has been established between the client and authorization server via other means.An absolute URI to which the authorization server will redirect the user-agent to when the end-user authorization step is completed"
                  },
                  {
                     "Name":"response_type",
                     "Required":"Y",
                     "Default":"code",
                     "Type":"enumerated",
                     "Description":"The requested response: an access token, an authorization code, or both",
					 "EnumeratedList":[
                        "code",
                        "token",
						"code_and_token"
                     ]					 
                  },
                  {
                     "Name":"scope",
                     "Required":"N",
                     "Default":"",
                     "Type":"string",
                     "Description":"The scope of the access request expressed as a list of space-delimited strings"
                  },
                  {
                     "Name":"state",
                     "Required":"N",
                     "Default":"",
                     "Type":"string",
                     "Description":"An opaque value used by the client to maintain state between the request and callback. The authorization server includes this value when redirecting the user-agent back to the client."
                  }
               ]
            },
            {
               "MethodName":"Token",
               "Synopsis":"Get access token",
               "HTTPMethod":"POST",
               "URI":"/oauth/access_token",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"client_id",
                     "Required":"Y",
                     "Default":"",
                     "Type":"int",
                     "Description":"The client identifier"
                  },			   
                  {
                     "Name":"code",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"The authorization code received from the authorization server"
                  },
                  {
                     "Name":"redirect_uri",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"The redirection URI used in the initial request"
                  },
                  {
                     "Name":"grant_type",
                     "Required":"Y",
                     "Default":"authorization_code",
                     "Type":"enumerated",
                     "Description":"The access grant type included in the request.",
					 "EnumeratedList":[
                        "authorization_code",
                        "password",
						"assertion",
						"refresh_token",
						"none"
                     ]
                  },
                  {
                     "Name":"scope",
                     "Required":"N",
                     "Default":"",
                     "Type":"string",
                     "Description":"The scope of the access request expressed as a list of space-delimited strings"
                  }				  
               ]
            }
