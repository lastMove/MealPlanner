doctype html
html
	head
		include include/meta
		link(rel="stylesheet", href="../public/js/bootstrap-3.1.1-dist/css/signin.css")
		title= "Meal Planner - Login"

	body
		div.container
			form.form-signin(role="form")
				h2.form-signin-heading Meal Planner - Login
				input(type="email", class="form-control" placeholder="Email address" required="" autofocus="")
				input(input type="password" class="form-control" placeholder="Password" required="")
				button(class="btn btn-lg btn-info btn-block" type="submit") Sign in
				div#forgot-pass
					a(href="#") Register
