doctype html
html
	head
		include include/meta
		title= "Meal Planner - Update"

	body
		include include/menu
		div.container
			include include/title
			h2 Dish - Update
			div.panel-warning.panel
				div.panel-heading.head-panel-tab
					h3.panel-title #{dish.name}
				form(role='form' method="post" action="/webApp/dishes/update/" + dish.id)
					table.panel-table
						tbody
							tr
								td.td-title Name :
								td
									input(type="text" name="name" required="" value=dish.name)
							tr
								td.td-title Description :
								td
									input(type="text" name="description" required="" value=dish.description)
							tr
								td.td-title Price :
								td
									input(type="number" name="price" required="" value=dish.price)
							tr
								td
									a(class="btn btn-default" href="/webApp/dishes" style="width:90px;") Go Back
								td
									button(class="btn btn-success" type="submit" style="width:155px;") Update Meal


	include include/footer
	script(src="/public/js/jQuery/jquery-2.1.1.js")
	script(src="/public/js/bootstrap-3.1.1-dist/js/bootstrap.min.js")
	script(type="text/javascript" charset="utf8" src="/public/js/dataTables-1.10.0/media/js/jquery.dataTables.js")